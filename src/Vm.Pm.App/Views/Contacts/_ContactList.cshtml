@model IEnumerable<Vm.Pm.App.ViewModels.ContactViewModel>

	<p supress-by-claim-name="Contact" supress-by-claim-value="Add">
		<a class="btn btn-info" asp-controller="Contacts" asp-action="AddContactByList" asp-route-id="@Model.FirstOrDefault().CompanyId">Novo Contato</a>
	</p>

<table class="table table-hover">
    <thead class="thead-dark">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CompanyId)
			</th>
			<th></th>
		</tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Email)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CompanyId)
			</td>
			<td class="text-right">
				<a class="btn btn-warning" asp-controller="Contacts" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam> </a>
				<a disable-by-claim-name="Contact" disable-by-claim-value="Edit" class="btn btn-info" asp-controller="Contacts" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam> </a>
				<a disable-by-claim-name="Contact" disable-by-claim-value="Remove" class="btn btn-danger" asp-controller="Contacts" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam> </a>
			</td>
		</tr>
}
    </tbody>
</table>
