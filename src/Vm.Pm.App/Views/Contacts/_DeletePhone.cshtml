@model Vm.Pm.App.ViewModels.PhoneViewModel

@{ 
	ViewData["Title"] = "Exclusão de Phone";
}

<div class="modal-header">
	<h4 class="modal-title">@ViewData["Title"]</h4>
	<button type="button" class="close" data-dismiss="modal">
		<span aria-hidden="true">×</span><span class="sr-only">Fechar</span>
	</button>
</div>

<form asp-action="ConfirmeRemovePhoneContact">
	<div class="modal-body">
		<input type="hidden" asp-for="ContactId" />
		<input type="hidden" asp-for="Id" />

		<partial name="_Phone" />

		<div class="modal-footer">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Excluir Phone" class="btn btn-danger" />
				<input type="button" class="btn btn-info" value="Fechar" data-dismiss="modal" />
			</div>
		</div>
	</div>
</form>