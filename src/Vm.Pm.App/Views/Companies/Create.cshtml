@model Vm.Pm.App.ViewModels.CompanyViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CompanyViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Create">
			<vc:Summary></vc:Summary>
			<div class="form-group">
				<label asp-for="DocumentNumber" class="control-label"></label>
				<input asp-for="DocumentNumber" class="form-control" />
				<span asp-validation-for="DocumentNumber" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FEIEIN" class="control-label"></label>
				<input asp-for="FEIEIN" class="form-control" />
				<span asp-validation-for="FEIEIN" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="LegalName" class="control-label"></label>
				<input asp-for="LegalName" class="form-control" />
				<span asp-validation-for="LegalName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="TradeName" class="control-label"></label>
				<input asp-for="TradeName" class="form-control" />
				<span asp-validation-for="TradeName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
				<a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
			</div>
		</form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
