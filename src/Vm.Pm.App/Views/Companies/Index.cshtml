@model IEnumerable<Vm.Pm.App.ViewModels.CompanyViewModel>

@{
	ViewData["Title"] = "Lista de Companies";
}

<h1>@ViewData["Title"]</h1>

<p supress-by-claim-name="Company" supress-by-claim-value="Add">
	<a class="btn btn-info" asp-action="Create">Nova Company</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DocumentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FEIEIN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LegalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TradeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.DocumentNumber)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.FEIEIN)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.LegalName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.TradeName)
			</td>
			<td class="text-right">
				<a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam></a>
				<a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam></a>
				<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam></a>
			</td>
		</tr>
}
    </tbody>
</table>
