@model Vm.Pm.App.ViewModels.PhoneViewModel

@{
    ViewData["Title"] = "Novo Phoner";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Create">
			<vc:Summary></vc:Summary>
			<div class="form-group">
				<label asp-for="Number" class="control-label"></label>
				<input asp-for="Number" class="form-control" />
				<span asp-validation-for="Number" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="TypePhoneId" class="control-label"></label>
				<input asp-for="TypePhoneId" class="form-control" />
				<span asp-validation-for="TypePhoneId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CompanyId" class="control-label"></label>
				<input asp-for="CompanyId" class="form-control" />
				<span asp-validation-for="CompanyId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ContactId" class="control-label"></label>
				<input asp-for="ContactId" class="form-control" />
				<span asp-validation-for="ContactId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
				<a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
			</div>
		</form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
