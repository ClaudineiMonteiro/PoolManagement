@model IEnumerable<Vm.Pm.App.ViewModels.PhoneViewModel>

<table class="table table-hover">
	<thead class="thead-dark">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.FirstOrDefault().Number)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FirstOrDefault().TypePhoneId)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Number)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TypePhoneId)
				</td>

				<td class="text-right">
					<a class="btn btn-warning" asp-action="DetailPhone" asp-route-id="@item.Id" data-modal=""><spam class="fa fa-search"></spam> </a>
					<a disable-by-claim-name="Phone" disable-by-claim-value="Edit" class="btn btn-info" asp-action="EditPhone" asp-route-id="@item.Id" data-modal=""><spam class="fa fa-pencil-alt"></spam> </a>
					<a disable-by-claim-name="Phone" disable-by-claim-value="Remove" class="btn btn-danger" asp-action="DeletePhone" asp-route-id="@item.Id" data-modal=""><spam class="fa fa-trash"></spam> </a>
				</td>
			</tr>
		}
	</tbody>
</table>
